			<SolidColorBrush x:Key="ThirdAppBrush" Color="#FFf06e25"/>
			<SolidColorBrush x:Key="AppGray" Color="#FF2D2D2D"/>

			<!--PAGE LAYOUT ROOT STYLE-->
			<Style x:Key="LayoutRootStyle" TargetType="Grid">
				<Setter Property="Background" Value="{StaticResource ApplicationPageBackgroundThemeBrush2}"/>
				<Setter Property="ChildrenTransitions">
					<Setter.Value>
						<TransitionCollection>
							<EntranceThemeTransition/>
						</TransitionCollection>
					</Setter.Value>
				</Setter>
			</Style>

			<!--BACK BUTTON-->
			<SolidColorBrush x:Key="AppBarItemPointerOverBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource ForegroundPointerOverBrush3}}"/>
			<SolidColorBrush x:Key="AppBarItemPointerOverForegroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="AppBarItemForegroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="AppBarItemBackgroundThemeBrush" Color="#00000000"/>
			<SolidColorBrush x:Key="AppBarItemPressedForegroundThemeBrush" Color="White"/>
			<!--BASE TEXT BLOCK STYLE-->
			<Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
				<Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
				<Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
				<Setter Property="SelectionHighlightColor" Value="{ThemeResource TextSelectionHighlightColorThemeBrush}"/>
				<Setter Property="TextTrimming" Value="CharacterEllipsis"/>
				<Setter Property="TextWrapping" Value="Wrap"/>
				<Setter Property="Typography.StylisticSet20" Value="True"/>
				<Setter Property="Typography.DiscretionaryLigatures" Value="True"/>
				<Setter Property="Typography.CaseSensitiveForms" Value="True"/>
				<Setter Property="LineHeight" Value="20"/>
				<Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
				<Setter Property="TextLineBounds" Value="TrimToBaseline"/>
				<Setter Property="OpticalMarginAlignment" Value="TrimSideBearings"/>
			</Style>
			<!--PAGE HEADER-->
			<Style x:Key="DatasheetFinderPageHeader" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
				<Setter Property="TextWrapping" Value="NoWrap"/>
				<Setter Property="Margin" Value="0,0,30,40"/>
				<Setter Property="Foreground" Value="{StaticResource MainAppBrush}"/>
				<Setter Property="FontWeight" Value="Normal"/>
				<Setter Property="FontFamily" Value="Impact"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="IsHitTestVisible" Value="false"/>
				<Setter Property="FontSize" Value="56"/>
				<Setter Property="LineHeight" Value="40"/>
			</Style>
			<!--SUBHEADER TEXT-->
			<Style x:Key="SubheaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
				<Setter Property="FontSize" Value="26.667"/>
				<Setter Property="FontWeight" Value="SemiLight"/>
				<Setter Property="LineHeight" Value="30"/>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform X="-1" Y="-6"/>
					</Setter.Value>
				</Setter>
			</Style>
			<Style x:Key="BaselineTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
				<Setter Property="LineHeight" Value="20"/>
				<Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
				<!-- Aligne correctement le texte sur sa ligne de base -->
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform X="-1" Y="4"/>
					</Setter.Value>
				</Setter>
			</Style>
			<Style x:Key="CaptionTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaselineTextStyle}">
				<Setter Property="FontSize" Value="12"/>
				<Setter Property="Foreground" Value="{StaticResource ApplicationSecondaryForegroundThemeBrush}"/>
			</Style>
			<!--TOGGLE SWITCH-->
			<SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource BackgroundPointerOverBrush2}}"/>
			<SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource ThirdAppBrush}}"/>
			<!--PROGRESS BAR-->
			<SolidColorBrush x:Key="ProgressBarForegroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ProgressBarIndeterminateForegroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<!--LIST VIEW/GRID VIEW-->
			<SolidColorBrush x:Key="ListViewItemSelectedPointerOverBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ListViewItemSelectedPointerOverBorderThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ListViewItemPointerOverBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource BackgroundPointerOverBrush2}}"/>
			<SolidColorBrush x:Key="ListViewItemCheckHintThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ListViewItemCheckSelectingThemeBrush" Color="{Binding Color, Source={StaticResource MainAppBrush}}"/>
			<SolidColorBrush x:Key="ListViewItemDragBackgroundThemeBrush" Color="{Binding Color, Source={StaticResource ForegroundPointerOverBrush4}}"/>

